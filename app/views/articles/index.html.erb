<p style="color: green"><%= notice %></p>

<h1>Articles</h1>


<div class="row">
  <div class="col-md-8">
  <%= search_form_for @q, url: articles_path, method: :get do |f| %>
    <%= f.search_field :title_or_body_cont, class: "form-control", placeholder: "Search Articles" %>
    <%= f.submit "Search", class: "btn btn-primary mt-2" %>
  <% end %>
  <% if @articles.any? %>
    <%= render @articles %>
  <% else %>
    <p>No articles found.</p>
  <% end %>
</div>
  <div class="col-md-4">
    <h2>All Users Search Count</h2>
    <canvas id="all-users-chart"></canvas>
    <h2>Private Search Count</h2>
    <canvas id="private-chart"></canvas>
  </div>
</div>






<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%= link_to "Show this article", article %>
    </p>
  <% end %>
</div>

<%= link_to "New article", new_article_path %>
